extends layout
append content
	#content
		div.central
			h1 Sign Up
			.hello
				if (message.length > 0)
					div#message=message
				form(action="/signup" method="post")
					label Email:
					input(type="text" name="email")
					br
					label Password:
					input(type="password" name="password")
					br
					button(type="submit") Sign up

